{
  "extends": "airbnb-base",
  "rules": {
    "max-len": ["error", 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "semi": ["error", "never"],
    "no-param-reassign": ["error", {
      "props": false
    }],
    "no-bitwise": ["error", { "allow": ["~"] }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": false, "peerDependencies": false}]
  },
  "env": {
    "browser": true
  }
}
